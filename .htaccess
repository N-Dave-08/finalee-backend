RewriteEngine On

# If the request is for the root, serve public/index.html
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ public/index.html [L]

# If the file or directory does not exist in root, try to serve from public/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L] 